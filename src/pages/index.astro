---
import '../styles/global.css';
import { SalesGuide } from '../components/SalesGuide';
---

<!doctype html>
<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Στρατηγική πωλήσεων — Οδηγός ομάδας</title>
